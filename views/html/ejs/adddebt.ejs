<% include header %>
<body>
<% include navbar %>

<div class="content">
<p>Enter a debt</p>
<form action="/adddebt" method="post" onsubmit="return validateRegister(this)">
<div class="data">
<div class="row">
<div class="block_text">Name</div>
<div class="block_input">
<input type="text" name="name" />
</div>
</div>
<div class="row">
<div class="block_text">Amount</div>
<div class="block_input"> <input type="text" name="amount" /></div>
</div>
